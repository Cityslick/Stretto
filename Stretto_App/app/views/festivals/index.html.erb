<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
   <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title"><%= link_to 'Stretto', root_path %> </span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        <a class="mdl-navigation__link" href=<%= festivals_path%>>Festivals</a>
        <a class="mdl-navigation__link" href="">Link</a>
        <a class="mdl-navigation__link" href="">Link</a>
        <a class="mdl-navigation__link" href="">Link</a>
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">Title</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
    </nav>
  </div>
  <main class="mdl-layout__content">
  <h1>Festivals Index</h1>
  <% @res[:events].each do |e| %>
  <br>
    <div class="page-content">
      <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <% if e[:performers][0][:images][:huge] === nil %>
              <img src="https://d49r1np2lhhxv.cloudfront.net/www/photos/EXITFestival2017_V1_1bxm6p2.jpg" 
                  style="width:20%;"/>
          <% else %>
              <img src=<%= e[:performers][0][:images][:huge] %> />
          <% end %>
        </div>
          <h3 class="mdl-card__title-text"><%= e[:title]%></h3>
        <div class="mdl-card__supporting-text">
          <div><%= e[:venue][:name]%></div>
          <div><%= e[:venue][:display_location]%></div>
          <% if e[:stats][:average_price] === nil %>
              Avg Price: <p>Not Available</p>
          <% else %>
              Avg Price: $<%= e[:stats][:average_price]%>
          <% end %>
          <div><%= e[:datetime_local].to_time.strftime("%a %b %d %Y") %></div>
          <div><%= e[:datetime_local].to_time.strftime("%-I:%M %p") %></div>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href=<%=e[:url] %> target="_blank">
            Buy Tickets
          </a>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href=<%=festival_path(e[:id]) %> target="_blank">
            Learn More
          </a>
        </div>
      </div>
      <% end %>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </main>
</div>
