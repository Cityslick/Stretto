<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title"><%= link_to 'Stretto', root_path %> </span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        <a class="mdl-navigation__link" href=<%= festivals_path%>>Festivals</a>
        <a class="mdl-navigation__link" href="">Link</a>
        <a class="mdl-navigation__link" href="">Link</a>
        <a class="mdl-navigation__link" href="">Link</a>
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">Title</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
        <br>
        <div class"page-header">
        <div class="s-pg-grid-flex">
        <div class="s-pg-layout mdl-shadow--8dp">
          <div class="header-pic" style='background-image: url(<%= @res[:performers][0][:image] %>);
                background-size: cover; background-repeat: no-repeat;' />
          </div>
          <h3><%= @res[:title]%></h3>
          <h3><%= @res[:venue][:name] %></h3>
          <h4><%= @res[:venue][:address] %></h4>
          <h4><%= @res[:venue][:display_location] %></h4>
          <br>
          <h4><%= @res[:datetime_local].to_date.strftime("%B %d, %Y") %></h4>
          <br>
          <br>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-color--primary"><a href=<%= @res[:url]%> target="_blank">BUY TICKETS</a>
          </button>
          <br>
          <br>
          <% @res[:performers].each do |p|%>
              <% if @res[:short_title].split(" ")[0].downcase != p[:short_name].split(" ")[0].downcase %>
                  <div><%= p[:short_name]%></div>
              <% end %>
              <br>
          <% end %>
          <br>
        </div>
        <div class="recommendations">
          <h1 class="mdl-color-text--accent">Recommendations</h1>
          <div class="s-artist-rec">
            <% @rec[:recommendations].each do |r| %>
                  <div class="rec-artist-card">
                    <div class="rec-card-img mdl-shadow--6dp" style='background-image: url(<%= r[:performer][:image] %>);' />
                      <div class="rec-overlay mdl-color--accent"></div>
                    </div>
                    <div class="rec-info mdl-shadow--6dp">
                      <div class="rec-name ">
                        <%= r[:performer][:short_name] %>
                      </div>
                    </div>
                  </div>
            <% end %>
          </div>
        </div>
    </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
  </main>
</div>

