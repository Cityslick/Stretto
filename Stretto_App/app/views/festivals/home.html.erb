<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title"><%= link_to 'Stretto', root_path %> </span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        <a class="mdl-navigation__link mdl-color-text--white" href=<%= festivals_path%>>Explore</a>
        <% if user_signed_in? %>
        <%= link_to('Profile', profile_path, class: "mdl-navigation__link mdl-color-text--white") %>
        <%= link_to('Favorites', saved_path, class: "mdl-navigation__link mdl-color-text--white") %>
        <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "mdl-navigation__link mdl-color-text--white") %>
        <% else %>
        <%= link_to('Login', new_user_session_path, class: "mdl-navigation__link mdl-color-text--white") %>
      <% end %>
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer mdl-color--grey-900">
    <span class="mdl-layout-title mdl-color-text--accent">Stretto</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link mdl-color-text--primary" href=<%= festivals_path %>>Explore</a>
      <% if user_signed_in? %>
        <a class="mdl-navigation__link mdl-color-text--primary" href=<%= saved_path(current_user.id) %>>Favorites</a>
        <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "mdl-navigation__link mdl-color-text--primary") %>
      <% else %>
        <%= link_to('Login', new_user_session_path, class: "mdl-navigation__link mdl-color-text--primary") %>
      <% end %>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
      <div class="home-pg-grid-flex mdl-shadow--4dp">
        <div class="coverr">
          <div class="side-intro">
            <div class="left-container">
              <div class="user-actions">
                <div class="homepg-icon">
                  <i class="material-icons" style="font-size: 60px;">settings_input_composite</i>
                </div>
                <div class="user-actions-title">
                  <h2><i>Stretto</i></h2>
                </div>
                <div class="user-actions-sign-up">
                  <%= button_to "SIGN-UP", new_user_registration_path, method: :get, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary button" %>
                </div>
                <div class="user-actions-acct">
                  <h5>-- Already have an account? --</h5>
                </div>
                <div class="user-actions-login">
                  <%= button_to "LOGIN", new_user_session_path, method: :get, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent button" %>
                </div>
              </div>
            </div>
            <div class="right-container">
              <h2>Find the right festival, right now</h2>
              <h4>Whether it's rap, rock, pop or jazz, search hundreds of festivals around the country...</h4>
              <div class="mission_one">
                <div><i class="material-icons check-icon" style="font-size: 28px;">check_circle</i></div>
                <div><h6>Search & discover live music you'll love</h6></div>
              </div>
              <div class="mission_two">
              <div><i class="material-icons check-icon" style="font-size: 28px;">check_circle</i></div>
              <div><h6>Create watchlists of your favorites</h6></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </main>
</div>
